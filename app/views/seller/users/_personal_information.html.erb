<fieldset>
    <h4>Tell us who you are:</h4>
    <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: 'First Name', class: 'f1-first-name form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: 'Last Name', class: 'f1-last-name form-control' %>
    </div>
    <div class="form-group">
        <label class="sr-only" for="f1-phone-number">Phone Number</label>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, placeholder: '03xxxxxxxxx', class: "f1-phone-number form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :landline %>
        <%= f.text_field :landline, placeholder: '04xxxxxxxx', class: "form-control"  %>
    </div>
    <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control"  %>
    </div>
    <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address , placeholder: 'Address',  class: "form-control" %>
        <%= f.hidden_field :is_complete, value: 'true'%>
    </div>
    <div class="f1-buttons">
        <button type="button" class="btn btn-next">Next</button>
    </div>
</fieldset>


