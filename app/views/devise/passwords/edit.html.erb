<div class="wrapper">
  <div class="logo">
    <%= image_tag 'logo.png' %>
  </div>
  <div class="text-center mt-4 name">
    CHICKY CART
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-field d-flex align-items-center">
      <span class="fas fa-key"></span>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Password" %>
    </div>
    <div class="form-field d-flex align-items-center">
      <span class="fas fa-key"></span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm Password" %>
    </div>
    <%= f.submit "Change my password", class: "btn mt-3" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
